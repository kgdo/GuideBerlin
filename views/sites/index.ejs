<%- layout("layouts/boilerplate")%>

<div id="cluster-map"></div>
<div class="container">

<h2>Sites</h2>
<div>
  <a href="/sites/new">Add a Site</a>
</div>
<% for (let site of sites) {%>
<div class="card mb-3">
  <div class="row">
    <div class="col-md-4">
      <%if(site.images.length) {%>
        <img class="img-fluid" alt="" src="<%=site.images[0].url%>">
        <% }else {%>
        <img class="img-fluid" alt=""
            src="'https://res.cloudinary.com/kendo/image/upload/v1638635847/YelpCamp/jocdnvln5kxzixzitr9e.heic'">
        <% } %>
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title"><%= site.title%></h5>
        <h5 class="card-title">
          <!-- <%= site.properties.popUpMarkUp%></h5> -->

        <p class="card-text"><%= site.description%></p>
        <p class="card-text">
          <small class="text-muted"><%= site.location%></small>
        </p>
        <a class="btn btn-primary" href="/sites/<%=site.id%>"
          >View <%=site.title%></a
        >
      </div>
    </div>
  </div>
</div>
<% } %>

<script>
  const mapToken = '<%-process.env.MAPBOX_TOKEN%>';
  const sites = {features: <%-JSON.stringify(sites)%>}
</script>

<script src="/javascripts/clusterMap.js"></script>
